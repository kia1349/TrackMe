<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.nuigalway.trackme">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:icon="@mipmap/track_me_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.Startup">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.Login" />
        <activity android:name=".activity.Register" />

        <!-- this is auto-generated and I don't know what it does....yet.... -->
        <!--
            meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" /
        -->
        <activity android:name=".activity.Menu" />

        <service
            android:name=".services.FallDetectionService"
            android:exported="false" />
        <service
            android:name=".services.MessageService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".services.GPSService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".activity.TrackMe" />
        <activity
            android:name=".activity.Preferences"
            android:label="@string/title_activity_preferences" />
        <activity android:name=".activity.Messaging" />
        <activity
            android:name=".activity.Contacts"
            android:label="@string/title_activity_contacts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.Help" />
        <activity android:name=".activity.ForgotPassword" />
        <activity
            android:name=".activity.GPSPreferences"
            android:label="@string/title_activity_gpspreferences"
            android:parentActivityName=".activity.Menu">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ie.nuigalway.trackme.activity.Menu" />
        </activity>
        <activity
            android:name=".activity.MenuNav"
            android:label="@string/title_activity_menu_nav"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>